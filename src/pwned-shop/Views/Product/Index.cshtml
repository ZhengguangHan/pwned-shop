@{

    var products = (List<Product>)ViewData["penis"];
}


@{
    ViewData["Title"] = "Index";
}

<div class="gallerybanner"><img src="~/bannerImg/gallerybanner.png" style="width: 100%"></div>
<br>
<br>
<center>
    <input class="searchInput" type="text" id="searchText" onkeyup="searchByKeyword()" placeholder="Search title..." />
</center>
<br>
<br>
<div class="row">
    @foreach (var game in products)
    {
        <div class="row">
            <div class="col">
                <div class="product-card">
                    <div class="product-images"><img src=@game.ImgURL></div>
                    <div class="product-info">
                        <h1 class="gamename">@game.ProductName</h1>
                        <h2 class="gamedes">@game.ProductDesc</h2>
                        <h3 class="price">S$@game.UnitPrice</h3>
                    </div>
                    <h4><input type="button" class="addcart-button" value="Add to Cart"></h4>
                </div>
            </div>
        </div>
    }
</div>




