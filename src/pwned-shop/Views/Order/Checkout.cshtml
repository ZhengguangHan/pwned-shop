@using pwned_shop.ViewModels

@{
    ViewData["Title"] = "Checkout";

    var reciept = (List<CheckOutViewModel>)ViewData["RecieptView"];
    var c = reciept.GroupBy(o => o.ProductName);

    float totalPrice = 0;

    foreach (var r in c)
    {
        totalPrice += (r.First().UnitPrice * r.Count());
    }
}

<div><img src="~/bannerImg/offersbanner.png" style="width:100%;"></div>
<br>
<a class="continue-shopping" style="float:right;" asp-area="" asp-controller="Product" asp-action="Index">Continue Shopping</a>
<br>
<br>
<center>
    <h1 class="sc-heading">
        Thank you for your purchase!
        <br />
        Enjoy Gaming <img src="~/bannerImg/video-game-resize.png" style="height: 100%"; />
    </h1>
</center>
<br>
<br>
<div class="container-fluid">
    <div>
        <div>
            <table>
                <thead class="cart-table-heading-row">
                    <tr>
                        <th width="25%">Product Details</th>
                        <th></th>
                        <th width="5%">Price</th>
                        <th width="8%">Quantity</th>
                        <th width="5%">Sub-Total</th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td><div class="cart-body-padding"></div></td>
                    </tr>

                    @foreach (var item in c)

                    {
                        <tr style="background-color:#f2f2f2;">
                            <td class="cart-product-images">
                                <div><img src=@item.First().ImgURL></div>
                            </td>

                            <td style="text-align: left; vertical-align: middle">
                                <div class="cart-pro-details">
                                    <p class="cart-product-name">@item.First().ProductName</p>
                                    <p class="cart-product-des">@item.First().ProductDesc</p>
                                    <br />
                                    <p class="cart-product-des">Activation Code:&nbsp;
                                    <select id="activation">
                                        @foreach (var subItem in item)
                                        {
                                            <option>@subItem.ActivationCode</option>
                                            }
                                    </select></p>
                                </div>
                            </td>

                            <td class="cart-unit-price">S @item.First().UnitPrice.ToString("C")</td>

                            <td class="cart-subtotal text-center">@item.Count()</td>

                            <td class="cart-subtotal">S @((item.Count() * item.First().UnitPrice).ToString("C"))</td>
                        </tr>

                        <tr>
                            <td><div class="cart-body-padding"></div></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <br />
        <div>
            <div class="text-right">
                <p class="cart-total-amt" id="cart-total">Total Amount: S @totalPrice.ToString("C")</p>
                <br />
                <br />
            </div>
        </div>
    </div>
</div>
