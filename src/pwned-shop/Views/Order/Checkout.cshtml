@using pwned_shop.ViewModels

@{
    ViewData["Title"] = "Checkout";

    var reciept = (List<CheckOutViewModel>)ViewData["RecieptView"];
    var c = reciept.GroupBy(o => new
    {
        o.ProductName,
        o.ProductDesc,
        o.Qty,
        o.UnitPrice,
        o.ImgURL
    });

    float totalPrice = 0;

    foreach (var r in c)
    {
        totalPrice += (r.Key.UnitPrice * r.Key.Qty);
    }
}

<div><img src="~/bannerImg/offersbanner.png" style="width:100%;"></div>
<br>
<a class="continue-shopping" style="float:right;" asp-area="" asp-controller="Product" asp-action="Index">Continue Shopping</a>
<br>
<br>
<center>
    <h1 class="sc-heading">
        Thank you for your purchase!
        <br />
        Enjoy Gaming <img src="~/bannerImg/video-game-resize.png" style="height: 100%"; />
    </h1>
</center>
<br>
<br>
<div class="container-fluid">
    <div>
        <div>
            <table>
                <thead class="cart-table-heading-row">
                    <tr>
                        <th width="28%">Product Details</th>
                        <th width="40%"></th>
                        <th style="text-align:center" width="12%">Price</th>
                        <th style="text-align:center" width="10%">Quantity</th>
                        <th style="text-align:center" width="10%">Sub-Total</th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td><div class="cart-body-padding"></div></td>
                    </tr>

                    @foreach (var item in c)

                    {
                        <tr class="cart-orderline" style="background-color:#f2f2f2;">
                            <td class="cart-product-images">
                                <img src=@item.Key.ImgURL>
                            </td>

                            <td class="cart-pro-details">
                                <div>
                                    <p class="cart-product-name">@item.Key.ProductName</p>
                                    <p class="cart-product-des">@item.Key.ProductDesc</p>
                                    <br />
                                    <p class="cart-product-name">Activation Code:&nbsp;
                                    <select id="activation">
                                        @foreach (var subItem in item)
                                        {
                                            <option>@subItem.ActivationCode</option>
                                            }
                                    </select>
                                    </p>
                                </div>
                            </td>

                            <td class="cart-unit-price" style="text-align:center">S  @item.Key.UnitPrice.ToString("C")</td>

                            <td class="cart-subtotal" style="text-align:center">@item.Key.Qty</td>

                            <td class="cart-subtotal" style="text-align:center">S @((item.Key.Qty * item.Key.UnitPrice).ToString("C"))</td>
                        </tr>

                        <tr>
                            <td><div class="cart-body-padding"></div></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <br />
        <br />
        <div class="row-viewcart">
            <div class="row-viewcart">
                <div class="cart-checkout">
                    <p class="cart-total-amt" id="cart-total">Total Amount: S @totalPrice.ToString("C")</p>
                </div>
            </div>
        </div>
    </div>
</div>

